<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="ViewCustomer">
        <div class="row ml16 mr16">
            <div t-foreach="data_list" t-as="data" class="col-2">
                <div class="card mt16">
                    <div class="card-body ">
                        <img t-att-src="'data:image/png;base64,' + data['image']" class="card-img-top" />
                        <h5 class="card-title mt8">
                            <t t-esc="data['khachhang']" />
                        </h5>
                        <a href="#" class="btn btn-sm btn-primary o_primary_button
                         align-items-center d-flex justify-content-center
                           " t-att-data-id="data['id']">
                            View cusotmer
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>